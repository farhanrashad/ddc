<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='to_weight']" position="after">
                <field name="is_bespoke" attrs="{'invisible': [('available_in_pos', '=', False)]}"/>
            </xpath>
            
        </field>
    </record>
    
    <record id="product_template_form_view_pos_bespoke" model="ir.ui.view">
        <field name="name">product.template.form.view.pos.bespoke</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pos']" position="inside">
                 <group name="bespoke">
                    <field name="is_open_bespoke_component_service" />
                    <field name="bespoke_component_product_template_id" readonly="1" attrs="{'invisible': [('is_open_bespoke_component_service', '=', False)]}"/>
                      <field name="is_bespoke_component" />
                </group>
            </xpath>
            
            <xpath expr="//header" position="inside">
                    <button string="Open Bespoke Service" name="open_bespoke_service_action" type="object" class="oe_highlight" attrs="{'invisible': [('is_open_bespoke_component_service', '=', False)]}"/>

            </xpath>
        </field>
    </record>
    
    
    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.category.form.view.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                 <group name="bespoke" col="2" string="Bespoke">
                   <field name="is_open_bespoke_component_service" />
                    <field name="bespoke_category_id" attrs="{'required': [('is_open_bespoke_component_service', '=', True)]}"/>
                    <field name="bespoke_pos_categ_id" attrs="{'required': [('is_open_bespoke_component_service', '=', True)]}"/>

                </group>
            </xpath>
        </field>
    </record>
</odoo>
