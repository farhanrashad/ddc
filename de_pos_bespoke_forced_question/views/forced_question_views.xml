<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_forced_question_form_view_inherit" model="ir.ui.view">
        <field name="name">pos.forced.question.form.view.inherit</field>
        <field name="model">pos.forced.question</field>
        <field name="inherit_id" ref="pos_forced_question.pos_forced_question_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group>
                    <group name="product_properties" string="Product Properties">
                        <field name="product_property_line_id" string="Short Value"/>
                        <field name="product_property_description" string="long Value"/>
                        <field name="product_property_is_short" />
                        <field name="product_property_is_long" />
                    </group>
                    <group string='Reference Product'>
                        <field name="product_id" />
                        <field name="product_uom_id" />
                        <field name="product_qty" attrs="{'required': [('product_id', '!=', False)]}" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
