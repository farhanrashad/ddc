<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <t t-name="ButtonMeasuresGuide">
        <div class='control-button in_measure'>
            <i class="fa fa-scissors"> Measurement Guide</i>
        </div>
    </t>
    <t t-name="MeasuresPopupWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-textinput" style="">
                <header class="title"><t t-esc=" widget.options.title || '' " /></header>
                <div>
                    <textarea id="measurement" style="width:461px;font-size:13px;height:200px;" class="measure_temp"></textarea>
                </div>
               
                <div class="footer">
                    <div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-extend="Orderline">
        <t t-jquery=".info-list" t-operation="append">
            <t t-if="line.get_measure_note()">
                <li class="info orderline-note">
                    <i class='fa fa-scissors' role="img" aria-label="Note" title="Note"/><t t-esc="line.measure_note" />
                </li>
            </t>
        </t>
    </t>
    
    
</template>
