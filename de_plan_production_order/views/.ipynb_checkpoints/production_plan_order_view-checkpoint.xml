<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="views_prod_order_form" model="ir.ui.view">
        <field name="name">mrp.production.plan.order.form</field>
        <field name="model">mrp.production.plan.order</field>
        <field name="arch" type="xml">
            <form string="Production Plan form">
                <header>
                    <button name='action_execute_plan' string="Execute Plan" type="object" class='oe_highlight' states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,executed"/>
                </header>

                <sheet>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />

                        </group>

                    </group>
                    <group>
                        <field name="note"  />
                    </group>
                    <notebook>
                        <page string="Production Order" >
                            <field name="production_ids" widget="many2many" domain="[('state', 'in', ['draft','confirmed'])]" options="{'no_create':True}" />
                                
                            
                        </page>
                       
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="views_prod_order_tree" model="ir.ui.view">
        <field name="name">mrp.production.plan.order.tree</field>
        <field name="model">mrp.production.plan.order</field>
        <field name="arch" type="xml">
            <tree string="Plan Production Tree">
                <field name="name"/>
                <field name="date" />
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="views_prodorder_search" model="ir.ui.view">
        <field name="name">mrp.production.plan.order.search</field>
        <field name="model">mrp.production.plan.order</field>
        <field name="arch" type="xml">
            <search string="plan production search">
                <field name="name"/>
                <field name="date"/>
            </search>
        </field>
    </record>

    <record id="action_production_views" model="ir.actions.act_window">
        <field name="name">Production Plan Order</field>
        <field name="res_model">mrp.production.plan.order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="plan_order_production_mrp" name="Production Plan Order" parent="mrp.menu_mrp_manufacturing"
			action="de_plan_production_order.action_production_views"
			sequence="1" />

</odoo>

