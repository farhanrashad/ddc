<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery="t[t-esc='orderline.get_product().display_name']" t-operation="after">
                <t t-if="orderline.get_product().measure_note">
                 [<t t-esc="orderline.get_product().measure_note"/>]
                </t>
        </t>
    </t>
    <t t-extend="Product">
        <t t-jquery=".product-name" t-operation="append">

            <t t-if="product.measure_note">
               [<t t-esc="product.measure_note"/>]
            </t>
        </t>
    </t>
    <t t-extend="Orderline">
        <t t-jquery=".product-name"  t-operation="append">
            <t t-if="line.get_product().measure_note">
               [<t t-esc="line.get_product().measure_note"/>]
        </t>

        </t>
    </t>
</templates>
