<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_extra_issuance_wizard_form" model="ir.ui.view">
            <field name="name">extra.issuance.wizard.form</field>
            <field name="model">extra.issuance.wizard</field>
            <field name="arch" type="xml">
                <form string="Component Consumption Report">
                    <group>
                      <group>
                          <field name="sale_id" />
                          <field name="is_order" invisible="1"/>
                          <field name="product_line_ids" widget="many2many_tags" invisible="1"/>
                      </group>
                      <group>
                        
                      </group>
                        
                    </group>
                    <notebook>
							<page string="Articles" attrs="{'invisible': [('is_order', '=', False)]}">
								<field name="articles_lines" >
									<tree  editable="bottom">
										<field name="product_id"/>
										<field name="product_quantity"/>
                                        <field name="product_line_ids" invisible="1"/>
										<field name="quantity"/>
										<field name="article_id" invisible="1"/>
									</tree>
								</field>
							</page>
                            <page string="Articles" attrs="{'invisible': [('is_order', '=', True)]}">
								<field name="articles_lines2">
									<tree  editable="bottom">
										<field name="product_id"/>
										<field name="product_quantity"/>
										<field name="quantity"/>
										<field name="article_id" invisible="1"/>
									</tree>
								</field>
							</page>
                    	</notebook>
                    
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_extra_issuance_action" model="ir.actions.act_window">
            <field name="name">Component Consumption Report</field>
            <field name="res_model">extra.issuance.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_extra_issuance_wizard_form"/>
        </record> 
    
     <menuitem id="extra_issuance_reporting_menu"
				  name="Component Consumption Report"
				  action="open_extra_issuance_action"
				  parent="stock.menu_warehouse_report"
				  sequence="1" />

</odoo>
