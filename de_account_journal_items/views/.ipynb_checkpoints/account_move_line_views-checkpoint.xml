<odoo>
  <data>
      
      <record id="account_move_line_form_view_tags" model="ir.ui.view">
			<field name="name">account.move.line.form.view.tags</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_move_line_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="category_ids"  widget='many2many_tags'/>
				</xpath>
				
			</field>
		</record>
      
      <record id="account_move_line_tree_view_tags" model="ir.ui.view">
			<field name="name">account.move.line.tree.tags</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_move_line_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="category_ids" widget='many2many_tags'/>
				</xpath>
				
			</field>
		</record>                        
      
       <record id="	account_move_line_search_view_tags" model="ir.ui.view">
			<field name="name">	account.move.line.search.tags</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_account_move_line_filter"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="category_ids" />
				</xpath>
                <xpath expr="//filter[@name='group_by_move']" position="after">
					<filter string="Partner Category" name="group_by_category" domain="[]" context="{'group_by': 'category_ids'}"/>

				</xpath>
				
			</field>
		</record>
   
   
  </data>
</odoo>