<?xml version="1.0"?>

<odoo>
    <data>
        <record id="view_project_task_readonly" model="ir.ui.view">
            <field name="name">>project.task.security.inherit.readonly</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="user_id" position="replace">
                    <field name="user_id" attrs="{'readonly':True}"/>
                </field>
                <field name="date_deadline" position="replace">
                    <field name="date_deadline" attrs="{'readonly':True}"/>
                </field>
                <field name="planned_hours" position="replace">
                    <field name="planned_hours" attrs="{'readonly':True}"/>
                </field>
                <field name="description" position="replace">
                    <field name="description" attrs="{'readonly':True}"/>
                </field>
                <field name="timesheet_ids" position="replace">
                    <field name="timesheet_ids" attrs="{'readonly':True}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="employee_probation_inherit_view">
            <field name="name">project.task.security.inherit.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="de_project_task_security.view_project_task_readonly"/>
            <field name="groups_id" eval="[(6, 0, [ref('de_project_task_security.task_limited_access')])]"/>
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="date_deadline" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="planned_hours" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="description" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="timesheet_ids" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>