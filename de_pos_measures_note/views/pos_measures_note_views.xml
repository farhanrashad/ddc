<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_order_measures_tree_view" model="ir.ui.view">
            <field name="name">pos.order.measures.tree.view</field>
            <field name="model">pos.order.measures.note</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Measurement Guide">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="pos_order_measures_form_view" model="ir.ui.view">
            <field name="name">pos.order.measures.form.view</field>
            <field name="model">pos.order.measures.note</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Measurement Guide">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_order_measures">
            <field name="name">Measurement Guide</field>
            <field name="res_model">pos.order.measures.note</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_no_content_create">Create Measurment Guide Item
                </p>
            </field>
        </record>
        <menuitem id="menu_pos_order_measures_guide" name="Measurement Guide" parent="point_of_sale.menu_point_config_product"
                  action="action_view_order_measures"/>


        

    </data>
</odoo>