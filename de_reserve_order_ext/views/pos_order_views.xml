<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">view.pos.pos.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_reference']" position="after">
                <field name="is_reserved" invisible="0"/>
                <field name="temp_amount" invisible="0"/>
            </xpath>
            <xpath expr="//button[@name='action_pos_order_invoice']" position="after">
                <button name="button_payment_adj_action" class="oe_highlight" string="Account Adjustment" type="object" />

            </xpath>
        </field>
    </record>
</odoo>
